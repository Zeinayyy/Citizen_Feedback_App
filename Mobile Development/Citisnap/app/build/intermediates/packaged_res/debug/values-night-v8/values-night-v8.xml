<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Citisnap" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <item name="colorSecondary">@color/gray_medium</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor">@color/black</item>
        
    </style>
    <style name="background">
        <item name="android:background">@color/black</item>
    </style>
    <style name="backgroundTint">
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="bottom_navigation">
        <item name="android:background">@drawable/bot_navigation_dark</item>
        <item name="itemIconTint">@color/white</item>
    </style>
    <style name="button">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="button_google">
        <item name="cornerRadius">10dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="button_navigation_bar" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="card">
        <item name="android:backgroundTint">@color/black_primary</item>
    </style>
    <style name="card_secondary">
        <item name="android:backgroundTint">@color/dark</item>
    </style>
    <style name="comment">
        <item name="android:src">@drawable/comment_dark</item>
    </style>
    <style name="divider">
        <item name="android:background">@color/white</item>
    </style>
    <style name="down_votes">
        <item name="android:src">@drawable/arrow_down_dark</item>
    </style>
    <style name="text">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="up_votes">
        <item name="android:src">@drawable/arrow_up_dark</item>
    </style>
</resources>